@page
@model ProdottiModel
@*using Prodotti*@

@{
    ViewData["Title"] = "Prodotti";
    CreateModel createModel = new();
    createModel.CaricaCategorie();
}

<h1>@ViewData["Title"]</h1>
<form method="post" asp-page="Create">
<table class="table text-white">
    <thead>
        <tr>
            <th>ID</th>
            <th>Nome Prodotto</th>
            <th>Prezzo</th>
            <th>Categoria</th>
            <th>Azioni</th>
        </tr>
    </thead>
    <tbody>
       <partial name="_CreatePartial" model="@createModel"/>
        @foreach (var prodotto in Model.Prodotti)
        {
            <tr>
                <td>@prodotto.Id</td>
                <td>@prodotto.Nome</td>
                <td>@prodotto.Prezzo</td>
                <td>@prodotto.CategoriaNome</td>
                <td>
                    <div class="btn-group">
                        <a asp-page="Dettagli" class="btn btn-secondary" asp-route-id="@prodotto.Id">Dettagli</a>
                        <a asp-page="Edit" class="btn btn-warning" asp-route-id="@prodotto.Id">Edit</a>
                        <a asp-page="Delete" class="btn btn-danger" asp-route-id="@prodotto.Id">Delete</a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>
</form>
