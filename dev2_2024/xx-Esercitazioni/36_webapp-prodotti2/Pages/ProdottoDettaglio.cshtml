@page
@model ProdottoDettaglioModel
@{
    ViewData["Title"] = "ProdottoDettaglio";
}

<h1>@ViewData["Title"]</h1>
 
<div> 
    <table class="table">
        <thead>
            <tr>
                <th>Nome</th>
                <th>Prezzo</th>
                <th>Dettaglio</th>
                <th>Categoria</th> 
                <th>Data Inserimento</th> 
                <th>Immagine</th>
            </tr>
        </thead>
        <tbody>
                <tr>
                    <td>@Model.Prodotto.Nome</td>
                    <td>@Model.Prodotto.Prezzo</td>
                    <td>@Model.Prodotto.Dettaglio</td>
                    <td>@Model.Prodotto.Categoria</td>
                    <td>@Model.Prodotto.Data</td>

                        <td><img src="@Model.Prodotto.Immagine" alt="@Model.Prodotto.Nome" width="300" height="200" /></td>
                </tr>
        </tbody>
    </table>
    <a asp-page="/Prodotti">Torna a Prodotti</a>
</div>